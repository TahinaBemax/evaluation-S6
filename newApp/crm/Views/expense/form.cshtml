@{
    ViewData["title"] = "Detail-Monthly-statistic";
    DetailStatisticLead? detail = ViewData["detail"] as DetailStatisticLead;
}

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Update Ticket/Lead</h4>

        <form action="@($"/manager/expenses/{detail?.ExpenseId}/save-edit")" method="post" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="Name" class="form-label">Nom</label>
            <p class="alert border-1 alert-secondary">@detail?.Name</p>
          </div>

          <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <p class="alert border-1 alert-secondary">@detail?.Email</p>
          </div>

          <div class="mb-3">
            <label for="Amount" class="form-label">Montant</label>
            <input type="number" id="Amount" name="Amount" class="form-control" step="any" value="@detail?.Amount"
              required>
            <div class="invalid-feedback">Veuillez entrer un montant valide.</div>
          </div>

          <button type="submit" class="btn btn-primary">Update</button>
        </form>

      </div>
    </div>
  </div>
</div>