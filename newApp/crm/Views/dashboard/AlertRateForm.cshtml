@{
    ViewData["title"] = "Alert Rate";
}

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Update alert Rate</h4>

        <form action="@($"/manager/budgets/save-new-alertRate")" method="post" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="alertRate" class="form-label">alert Rate</label>
            <input type="number" id="alertRate" name="alertRate" class="form-control" step="any" value=""
              required>
            <div class="invalid-feedback">Please entrer a valide number</div>
          </div>

          <button type="submit" class="btn btn-primary">Update</button>
        </form>

      </div>
    </div>
  </div>
</div>